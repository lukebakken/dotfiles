colorscheme zenburn
set guioptions=ar
set guiheadroom=0

if has('win32') || has('win64')
    set guifont=Source_Code_Pro:h10:cANSI
    au GUIEnter * simalt ~x
elseif has('macunix')
    set guifont=Source\ Code\ Pro:h14
    set background=light
else
    set guifont=Source\ Code\ Pro\ 10
    set background=dark
endif
