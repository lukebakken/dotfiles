declare -r UNAME="$(uname)"

KERL_ENABLE_PROMPT=YES
if [[ $UNAME == Darwin ]]
then
    # https://gist.github.com/binarytemple/4c92451828e98dc61d0a
    export CFLAGS="-DOPENSSL_NO_EC=1"
	KERL_BASE_DIR="$HOME/erlang"
	KERL_DOWNLOAD_DIR="$HOME/erlang/archives"
	KERL_BUILD_DIR="$HOME/erlang/builds"
	KERL_GIT_DIR="$HOME/erlang/gits"
	KERL_DEFAULT_INSTALL_DIR="$HOME/erlang/installs"
    KERL_CONFIGURE_OPTIONS='--disable-hipe --enable-smp-support --enable-threads --enable-kernel-poll --enable-darwin-64bit --with-ssl=/usr/local'
else
	export CFLAGS="-DOPENSSL_NO_CHACHA=1"
	# export XDG_CONFIG_HOME=/home/lbakken/repos/rmq
	KERL_BASE_DIR=/home/erlang
	KERL_DOWNLOAD_DIR=/home/erlang/archives
	KERL_BUILD_DIR=/home/erlang/builds
	KERL_GIT_DIR=/home/erlang/gits
	KERL_DEFAULT_INSTALL_DIR=/home/erlang/installs
    KERL_CONFIGURE_DISABLE_APPLICATIONS='odbc'
	KERL_CONFIGURE_OPTIONS='--enable-hipe --enable-smp-support --enable-threads --enable-kernel-poll --without-odbc --with-ssl=/usr/lib/openssl-1.0 --with-ssl-incl=/usr/include/openssl-1.0'
fi
# NB: Arch Linux
# pacman -S openssl-1.0
# cd /usr/lib/openssl-1.0 && ln -vsf /usr/lib/openssl-1.0 lib
# cd /usr/include/openssl-1.0 && ln -vsf /usr/include/openssl-1.0 include
#
#   --with-ssl=PATH         specify location of OpenSSL include and lib
#   --with-ssl-incl=PATH    location of OpenSSL include dir, if different than
#                           specified by --with-ssl=PATH
#   --with-ssl-rpath=yes|no|PATHS
#                           runtime library path for OpenSSL. Default is 'yes',
#                           which equates to a number of standard locations. If
#                           'no', then no runtime library paths will be used.
#                           Anything else should be a comma separated list of
#                           paths.
